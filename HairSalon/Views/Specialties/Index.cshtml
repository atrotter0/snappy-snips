@model IEnumerable<HairSalon.Models.Specialty>

@{
    ViewData["Title"] = "Snappy Snips | Specialties";
    Layout = "_Layout";
}

<div class="container">
    <h1>Specialties</h1>
    @Html.ActionLink("Add Specialty", "Create", "Specialties", null, new { @class="btn btn-lg btn-info" })
    @if (Model.Count() > 0)
    {
        <div class="grid-container">
            @foreach(var specialty in Model)
            {
                <div class="grid-item">
                    <img src="/img/specialty-icon.png" class="specialty-icon">
                    @Html.DisplayFor(modelItem => specialty.Name)
                </div>
                <div class="grid-item">@Html.ActionLink("Details", "Show", new { id = specialty.SpecialtyId })</div>
                <div class="grid-item">@Html.ActionLink("Edit", "Edit", new { id = specialty.SpecialtyId })</div>
                <div class="grid-item">
                    @using (Html.BeginForm("delete", "Specialties", new { id = specialty.SpecialtyId }, FormMethod.Post))
                    {
                        <input type="submit" value="Delete" class="no-btn-styles"/>
                    }
                </div>
            }
        </div>
    }
</div>
